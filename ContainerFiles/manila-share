# syntax = docker/dockerfile:1
# This Dockerfile uses multi-stage build to customize DEV and PROD images:
# https://docs.docker.com/develop/develop-images/multistage-build/
# Dockerfile

ARG VENV_TAG=3.12-latest
FROM ghcr.io/rackerlabs/genestack-images/openstack-venv:${VENV_TAG} AS dependency_build
ARG CACHEBUST=0
ARG OS_VERSION=master
ARG OS_CONSTRAINTS=master
RUN export DEBIAN_FRONTEND=noninteractive \
  && apt-get update && apt-get upgrade -y \
  && apt-get install --no-install-recommends -y \
                                             bash \
                                             brotli \
                                             build-essential \
                                             bridge-utils \
                                             cargo \
                                             curl \
                                             default-mysql-client \
                                             default-mysql-server \
                                             docutils-common \
                                             gettext \
                                             git \
                                             iproute2 \
                                             libffi-dev \
                                             libjs-sphinxdoc \
                                             libjs-underscore \
                                             libldap2-dev \
                                             libpq-dev \
                                             libsasl2-dev \
                                             libssl-dev \
                                             libsystemd-dev \
                                             libxml2-dev \
                                             libxslt1-dev \
                                             libxslt1.1 \
                                             nfs-kernel-server \
                                             openvswitch-switch \
                                             postgresql-client \
                                             pkg-config \
                                             python3-dev \
                                             ssl-cert \
                                             xmlsec1
RUN /usr/local/bin/python -m pip install --upgrade --force-reinstall pip
RUN /var/lib/openstack/bin/pip install --constraint https://opendev.org/openstack/requirements/raw/branch/${OS_CONSTRAINTS}/upper-constraints.txt \
                                       git+https://opendev.org/openstack/manila.git@${OS_VERSION}#egg=manila \
                                       PyMySQL \
                                       python-memcached \
                                       uwsgi

RUN . /var/lib/openstack/bin/activate && /var/lib/openstack/bin/python -m pip install --upgrade pip pyOpenSSL==25.3.0

COPY scripts/manila-share-cve-patching.sh /opt/
RUN bash /opt/manila-share-cve-patching.sh

RUN find / -name '*.pyc' -delete \
  && find / -name '*.pyo' -delete \
  && find / -name '__pycache__' -delete \
  && find / -name '*.whl' -delete \
  && rm -f /var/lib/openstack/lib/python*/site-packages/slapdtest/certs/client.key \
  && rm -f /var/lib/openstack/lib/python*/site-packages/slapdtest/certs/server.key \
  && sed -i '/^Usage/,/^Documentation\n^-.*$/d' /var/lib/openstack/lib/python*/site-packages/PyJWT-*.dist-info/METADATA

FROM python:3.12-slim-bookworm
LABEL maintainer="Rackspace"
LABEL vendor="Rackspace OpenStack Team"
LABEL org.opencontainers.image.name="manila-share"
LABEL org.opencontainers.image.description="OpenStack Service (manila-share) built for the enterprise."
COPY --from=dependency_build /var/lib/openstack /var/lib/openstack
RUN export DEBIAN_FRONTEND=noninteractive \
  && apt-get update && apt-get upgrade -y \
  && apt-get install --no-install-recommends -y \
                                             bash \
                                             brotli \
                                             bridge-utils \
                                             bzip2 \
                                             curl \
                                             default-mysql-client \
                                             default-mysql-server \
                                             gettext \
                                             gzip \
                                             iproute2 \
                                             libblkid1 \
                                             libbz2-1.0 \
                                             libbz2-dev \
                                             libcap2 \
                                             libc6 \
                                             libffi-dev \
                                             libgcc-s1 \
                                             libldap2-dev \
                                             liblz4-1 \
                                             liblzma5 \
                                             liblzma-dev \
                                             libpq-dev \
                                             libsasl2-dev \
                                             libssl-dev \
                                             libstdc++6 \
                                             libsystemd-dev \
                                             libwrap0 \
                                             libxml2 \
                                             libxml2-dev \
                                             libxslt1-dev \
                                             libxslt1.1 \
                                             lsb-base \
                                             netbase \
                                             nfs-common \
                                             nfs-kernel-server \
                                             openvswitch-switch \
                                             postgresql-client \
                                             pkg-config \
                                             python3-dev \
                                             squashfs-tools \
                                             ssl-cert \
                                             ucf \
                                             xmlsec1 \
                                             xz-utils \
                                             zlib1g \
                                             zlib1g-dev \
                                             zopfli \
                                             zstd \
  && python3 -m pip install --upgrade --force-reinstall pip \
  && apt-get purge -y --auto-remove -o APT::AutoRemove::RecommendsImportant=false \
  && apt-get clean -y \
  && rm -rf /var/lib/apt/lists/* \
  && find / -name '*.pyc' -delete \
  && find / -name '*.pyo' -delete \
  && find / -name '__pycache__' -delete \
  && groupadd --system --gid 42424 manila \
  && useradd --system --gid 42424 --uid 42424 --shell /sbin/nologin --create-home --home /var/lib/manila manila \
  && mkdir -p /var/lib/openstack/etc/manila \
  && ln -s /var/lib/openstack/etc/manila /etc/manila \
  && chown manila:manila -h /etc/manila \
  && chown -R manila:manila /var/lib/openstack/etc/manila
# Set the environment variables for the manila venv
ENV PATH="/var/lib/openstack/bin:$PATH"
# Set the working directory
WORKDIR /var/lib/openstack
# Set the user and group to match the original build
USER 42424:42424
# Set the entrypoint to the manila-manage command
ENTRYPOINT ["/var/lib/openstack/bin/manila-manage"]
